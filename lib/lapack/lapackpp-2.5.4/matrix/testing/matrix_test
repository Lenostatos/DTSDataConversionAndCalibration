testsuite="tgd tgc tld tuld tud tuud tvi ttdd tstd trvd tcvd tsybmd tvd"
N="10 30 100"


# run local test and check it against supplied results
for t in ${testsuite}; do
    for n in ${N}; do
        answer="${t}${n}.out"
        echo "$t $n $n > $answer"
        ./$t $n $n >> $answer || exit $?
    done
done
